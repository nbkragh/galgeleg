<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opgaver.galgeleg">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nicolais_flotte_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nicolais_flotte_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HighscoreActivity" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".GameResultActivity" />
        <activity android:name=".MuligeOrdActivity" />
        <activity
            android:name=".MenuActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity" />
    </application>

</manifest>